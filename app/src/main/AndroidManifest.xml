<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.cookit">

    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="comp3350.cookit.presentation.HomeListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.NewRecipeActivity"/>
        <activity android:name=".presentation.DisplayRecipeActivity"/>
        <activity android:name=".presentation.TaggedListActivity"/>
        <activity android:name=".presentation.FavoriteListActivity"/>
        <activity android:name=".presentation.FilterByTagActivity"/>
    </application>

</manifest>
